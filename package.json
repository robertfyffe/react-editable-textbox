{
  "name": "@robertfyffe/react-editable-textbox",
  "version": "0.0.2",
  "description": "React component for creating a contentEditable textbox.",
  "main": "index.js",
  "scripts": {
    "start": "yarn webpack-dev-server --config ./scripts/webpack.config.js --inline --host 127.0.0.1 --content-base examples/",
    "test": "yarn test:lint",
    "test:lint": "yarn run eslint --cache --quiet \"src/**/*.js\"",
    "test:lint:fix": "yarn test:lint --fix",
    "release": "standard-version",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertfyffe/react-editable-textbox.git"
  },
  "keywords": [
    "react-component",
    "contenteditable",
    "editable-textbox",
    "react"
  ],
  "author": "Robert Fyffe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robertfyffe/react-editable-textbox/issues"
  },
  "homepage": "https://github.com/robertfyffe/react-editable-textbox#readme",
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/css": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "sanitize-html": "^1.23.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-react-app": "^9.1.2",
    "commitizen": "^4.0.4",
    "cz-customizable": "^6.2.0",
    "cz-customizable-ghooks": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "standard-version": "^7.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "directories": {
    "example": "examples"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn run eslint --fix"
    ]
  }
}
